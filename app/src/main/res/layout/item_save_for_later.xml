<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="274dp"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    android:backgroundTint="#F9FAF7"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="274dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Author Profile Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="8dp">

            <!-- Author Image -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_profile_image"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="5dp"
                app:cardCornerRadius="16.5dp"
                app:cardElevation="8dp">

                <ImageView
                    android:id="@+id/authorImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="4dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/avata2" />
            </androidx.cardview.widget.CardView>


            <!-- Author Name -->
            <TextView
                android:id="@+id/authorName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trần Minh Tuyết"

                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Recipe Image -->
        <ImageView
            android:id="@+id/recipeImage"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/rounded_border"
            android:scaleType="centerCrop"
            android:src="@drawable/noodle" />

        <!-- Recipe Title and Save Icon -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <!-- Recipe Title -->
            <TextView
                android:id="@+id/recipeTitle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Chân giò heo hầm rau củ"
                android:textColor="#1A1515"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Save Icon -->
            <androidx.cardview.widget.CardView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="5dp"
                app:cardCornerRadius="16.5dp"
                app:cardElevation="8dp">

                <ImageView
                    android:id="@+id/saveIcon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="4dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/save_instagram" />
            </androidx.cardview.widget.CardView>
            <!--            <ImageView-->
            <!--                android:id="@+id/saveIcon"-->
            <!--                android:layout_width="24dp"-->
            <!--                android:layout_height="24dp"-->
            <!--                android:layout_marginStart="12dp"-->
            <!--                android:src="@drawable/save_instagram" />-->
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
